# Cancer Care Coordinator - Environment Configuration
# Copy this file to .env and fill in your values

# ==================================================
# OpenAI API Configuration (Required)
# ==================================================
OPENAI_API_KEY=sk-your-api-key-here

# ==================================================
# Mock Mode Settings
# Set to "true" for testing without real API calls
# Set to "false" for production with real APIs
# ==================================================
USE_MOCK_LLM=false
USE_MOCK_VECTOR_STORE=false
USE_MOCK_TRIALS_API=false

# ==================================================
# Database Configuration
# ==================================================
DATABASE_URL=sqlite:///./cancer_care.db

# ==================================================
# ChromaDB Vector Store
# ==================================================
CHROMA_PERSIST_DIR=./chroma_db

# ==================================================
# Optional: Pinecone (if using cloud vector store)
# ==================================================
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-environment
# PINECONE_INDEX=cancer-care-coordinator

# ==================================================
# LangSmith Tracing (Free tier: https://smith.langchain.com)
# Sign up at https://smith.langchain.com to get your API key
# ==================================================
LANGSMITH_TRACING_ENABLED=false
LANGSMITH_API_KEY=lsv2_your-api-key-here
LANGSMITH_PROJECT=cancer-care-coordinator

# ==================================================
# Application Settings
# ==================================================
DEBUG=false
